<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_shape_round_fff_5"
    android:paddingTop="10dp"
    android:paddingBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_18"
    android:layout_marginRight="@dimen/dp_18"
    android:layout_marginTop="@dimen/dp_20"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <com.teayork.common_base.widget.view.SWImageView
            android:id="@+id/home_hot_item_image"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            app:stype="round"
            android:layout_height="180dp" />




    </RelativeLayout>

    <TextView
        android:id="@+id/home_hot_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="10dp"
        tools:text="我是标题啊"
        android:layout_marginRight="18dp"
        />

    <cn.bingoogolapple.photopicker.widget.BGANinePhotoLayout
        android:id="@+id/test_npl_item_moment_photos"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        style="@style/MatchWrap"
        android:layout_marginTop="8dp"
        app:bga_npl_itemCornerRadius="0dp"
        app:bga_npl_itemSpanCount="3"
        app:bga_npl_itemWhiteSpacing="4dp"
        app:bga_npl_itemWidth="0dp"
        app:bga_npl_otherWhiteSpacing="64dp"
        app:bga_npl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
        app:bga_npl_showAsLargeWhenOnlyOne="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_hot_item_text_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="author"
            />
        <TextView
            android:id="@+id/home_hot_item_text_date"
            android:layout_width="0dp"
            tools:text="date：2019-10-23"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>


</LinearLayout>