<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_community"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.teayork.common_base.base.recycleview.XRecyclerView
            android:id="@+id/xrc_community"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.teayork.common_base.base.recycleview.XRecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
    android:id="@+id/txt_post_community"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:gravity="center"
    android:textSize="30sp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="150dp"
    android:layout_marginRight="@dimen/dp_20"
    android:text="+"
    android:background="@drawable/main_shape_round_f6_5"
    />
    <TextView
        android:id="@+id/txt_show_community"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="90dp"
        android:text="see"
        android:background="@drawable/main_shape_round_f6_5"
        android:visibility="gone"
        />


</RelativeLayout>